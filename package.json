{
    "name": "@rall3n/typoscript-webpack-plugin",
    "version": "1.2.11",
    "description": "A simple plugin to generate typoscript statements to include generated assets (Forked from Michael Marcenich)",
    "main": "index.js",
    "files": [
        "loading"
    ],
    "scripts": {
        "test": "webpack --config dev/webpack.config.js && node ./dev/insert-template.js",
        "test:watch": "cross-env WATCH_MODE=on npm run test",
        "lint": "eslint --ignore-path .gitignore --ignore-pattern *.min.js .",
        "lint:fix": "npm run lint -- --fix .",
        "lint:check": "eslint-config-prettier .eslintrc.js",
        "release": "standard-version"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Rall3n/typoscript-webpack-plugin.git"
    },
    "keywords": [
        "typo3",
        "typoscript",
        "webpack",
        "webpack-plugin",
        "deprecated"
    ],
    "author": "Rall3n <nb.rallen@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Rall3n/typoscript-webpack-plugin/issues"
    },
    "homepage": "https://github.com/Rall3n/typoscript-webpack-plugin#readme",
    "engines": {
        "node": ">= 8.9.0",
        "npm": ">= 5.0.0"
    },
    "dependencies": {
        "deepmerge": "^4.2.2",
        "just-pick": "^4.0.0"
    },
    "peerDependencies": {
        "webpack": "^4.39.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^14.1.0",
        "@commitlint/config-conventional": "^14.1.0",
        "babel-eslint": "^10.1.0",
        "clean-webpack-plugin": "^4.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^5.2.7",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-html": "^6.2.0",
        "eslint-plugin-prettier": "^4.0.0",
        "file-loader": "^6.2.0",
        "husky": "^3.1.0",
        "mini-css-extract-plugin": "^1.6.2",
        "prettier": "^2.4.1",
        "standard-version": "^9.3.2",
        "style-loader": "^2.0.0",
        "webpack": "^4.46.0",
        "webpack-cli": "^4.9.1",
        "webpack-manifest-plugin": "^4.0.2"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint:check && npm run lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
